<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#9c9c9c" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_conversation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/conversation_selector" />
            <TextView
                android:id="@+id/tv_unread"
                android:visibility="gone"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:text="12"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="10sp"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:background="@mipmap/unread_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_contact"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/contact_selector" />

        <ImageView
            android:id="@+id/iv_plugin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/plugin_selector" />
    </LinearLayout>


</LinearLayout>
